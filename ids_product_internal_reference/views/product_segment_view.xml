<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="inherit_view_product_segment_form">
            <field name="name">product.segment.form</field>
            <field name="model">product.segment</field>
            <field name="inherit_id" ref="ids_api_customisations.product_segment_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Sequence">
                            <group>
                                <group string="Sequence">
                                    <field name="code_prefix"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
